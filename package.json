{
  "name": "webby",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "concurrently -n=api,db,tsc,web 'npm:api:start' 'npm:db:start' 'npm:tsc' 'npm:web:start'",
    "test": "razzle test --env=jsdom",
    "api:start": "nodemon -w src/* -x 'ts-node src/api.ts'",
    "api+db:start": "concurrently -n=api,db 'npm:api:start' 'npm:db:start'",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed --preview-feature",
    "db:start": "docker run --rm -i --name=api-db -p 5432:5432 -v api_data:/var/lib/postgresql/data -e POSTGRES_USER='test' -e POSTGRES_PASSWORD='test' -e POSTGRES_DB='api' postgres",
    "tsc": "tsc -b -w --preserveWatchOutput",
    "web:build": "tsc -b && razzle build --noninteractive",
    "web:start": "razzle start",
    "web:start:prod": "NODE_ENV=production node build/server.js"
  },
  "dependencies": {
    "@prisma/client": "^2.20.1",
    "cors": "^2.8.5",
    "execa": "^5.0.0",
    "express": "^4.17.1",
    "prisma": "^2.20.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack-env": "^1.14.0",
    "babel-preset-razzle": "4.0.4",
    "concurrently": "^6.0.2",
    "html-webpack-plugin": "^4.5.2",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.7",
    "razzle": "4.0.4",
    "razzle-dev-utils": "^4.0.4",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "type-fest": "^1.1.3",
    "typescript": "^4.2.4",
    "webpack": "^4.44.1",
    "webpack-dev-server": "^3.11.2"
  },
  "private": true
}
